PIO EQU 30H
PIC EQU 20H
INT0 EQU 10

ORG 40
DIRECINT_0 DW GESTOR0

ORG 3000H
GESTOR0:
MOV [BX],AH
ADD BYTE PTR[BX],'0'
INT 7
PUSH AX
MOV AL,20H
OUT PIC,AL
POP AX
IRET

ORG 1000H
PRINT DB ?

ORG 2000H
IN AL,PIC+1
AND AL,11111110B
OUT PIC+1,AL
MOV AL,INT0
OUT PIC+4,AL
MOV AX,1
MOV BX,OFFSET PRINT
LOOP:
CMP AH,9
JNZ SIGO
MOV AH,0
SIGO:
INC AH
JMP LOOP
HLT
END
