7.A)
HAND EQU 40H
PIC EQU 20H
INT2 EQU 10

ORG 40
GESTOR_INT2 DW GESTOR2

ORG 3000H
GESTOR2:
IN AL,HAND+1
AND AL,1
JNZ GESTOR2
MOV AL,[BX]
OUT HAND,AL
INC BX
DEC CL
JNZ FIN2
HLT
FIN2:
MOV AL,20H
OUT PIC,AL
IRET

ORG 1000H
CADENA DB "UNIVERSIDAD NACIONAL DE LA PLATA"
FIN DB ?

ORG 2000H
MOV BX,OFFSET CADENA
MOV CL,OFFSET FIN-OFFSET CADENA
MOV AL,INT2
OUT PIC+6,AL
IN AL,PIC+1
AND AL,11111110B
IN AL,HAND+1
OR AL,10000010B
OUT HAND+1,AL
OUT PIC+1,AL
LOOP: JMP LOOP
HLT
END
